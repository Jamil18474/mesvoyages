{% extends "baseadmin.html.twig" %}
{% block body %}
    <p class="text-right">
        <a href="{{ path('admin.voyage.ajout') }}" class="btn btn-primary">
            Ajouter une nouvelle visite
        </a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>       
                <th>
                    Ville
                    <a href="{{ path('admin.voyage.sort', {champ:'ville', ordre:'ASC'}) }}"
class="btn btn-primary btn-sm active" role="button" aria-pressed="true"></a>
                    <a href="{{ path('admin.voyage.sort', {champ:'ville', ordre:'DESC'}) }}"
class="btn btn-primary btn-sm active" role="button" aria-pressed="true"></a>                      
                </th>
                <th>
                    Pays
                    <a href="{{ path('admin.voyage.sort', {champ:'pays', ordre:'ASC'}) }}"
class="btn btn-primary btn-sm active" role="button" aria-pressed="true"></a>
                    <a href="{{ path('admin.voyage.sort', {champ:'pays', ordre:'DESC'}) }}" 
class="btn btn-primary btn-sm active" role="button" aria-pressed="true"></a>
                </th>
                <th>
                    Date
                    <a href="{{ path('admin.voyage.sort', {champ:'datecreation', ordre:'ASC'}) }}" 
class="btn btn-primary btn-sm active" role="button" aria-pressed="true"></a>
                    <a href="{{ path('admin.voyage.sort', {champ:'datecreation', ordre:'DESC'}) }}" 
class="btn btn-primary btn-sm active" role="button" aria-pressed="true"></a>
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 class="text-primary">
                            {{  visite.ville }}
                        </h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td>   
                        {{ visite.datecreationstring }}
                    </td>
                    <td>
                        <a href="{{ path('admin.voyage.edit', {id:visite.id}) }}" class="btn btn-secondary">Editer</a>
                        <a href="{{ path('admin.voyage.suppr', {id:visite.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{visite.ville}} ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
